extends ../layout

block content
    link(rel="stylesheet", href="/css/post/add.css")
    script(src="/js/post/add.js")
    h1 게시글쓰기
    form.add_form(method="POST" enctype= "multipart/form-data") 
        input(type="text" name="p_title")
        textarea( cols="30", rows="10" name="p_content")
        img.img_add(src="images/noImage.svg" , width = "200px" )
        input(type="file" name= "p_image" accept="image/*" id= "p_image")
        input.btn(type="button" value="추가")
        input.btn(type="button" value="돌아가기" data-n_seq=`${n_seq}`)